@model WebApp.ViewModels.HomeworkIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Homework for @Model.Course.Name</h1>

<p>
    <a asp-action="Create" asp-route-id="@Model.Course.Id">Create new homework</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Homework)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>

                <a asp-controller="StudentHomework" asp-action="HomeworkTeacherIndex" asp-route-id="@item.Id">Responses</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>