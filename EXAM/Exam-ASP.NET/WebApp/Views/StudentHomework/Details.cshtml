@model Domain.StudentHomework

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>StudentHomework for @Model.Homework.Course.Name</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.FirstLastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Homework)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Homework.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Grade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Grade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentAnswer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentAnswer)
        </dd>

        <form asp-action="Edit" asp-route-id="@Model.Id">
            <input type="hidden" asp-for="@Model.Id" value="@Model.Id"/>
            <input type="hidden" asp-for="@Model.HomeworkId" value="@Model.HomeworkId"/>
            <input type="hidden" asp-for="@Model.AppUserId" value="@Model.AppUserId"/>
            <input type="hidden" asp-for="@Model.StudentAnswer" value="@Model.StudentAnswer"/>
            <div class="form-group">
                <select class="form-control" asp-for="@Model.Grade">
                    @for (int i = 0; i < 6; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <span asp-validation-for="@Model.Grade" class="text-danger"></span>
            </div>
            <button class="btn btn-primary" type="submit">Save</button>
        </form>
    </dl>
</div>
<div>
    <a asp-action="HomeworkTeacherIndex" asp-route-id="@Model.HomeworkId">Back to List</a>
</div>