@model IEnumerable<BLL.App.DTO.PizzaInCart>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@Resources.Views.Shared.CreateShared.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Resources.Domain.Tables.PizzaType
            </th>
            <th>
                @Resources.Domain.Tables.Crust
            </th>
            <th>
                @Resources.Domain.Tables.Size
            </th>
            <th>
                @Resources.Domain.Tables.Cart
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaType!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Crust!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cart!.AppUser!.Email)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Resources.Views.Shared.EditShared.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Resources.Views.Shared.DetailsShared.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Resources.Views.Shared.DeleteShared.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
