@using Domain
@model InvoiceCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Views.Shared.EditShared.Edit</h1>

<h4>Invoice</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Invoice.IsPaid"/> @nameof(Invoice.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.TransportId" class="control-label"></label>
                <select asp-for="Invoice.TransportId" class="form-control" asp-items="Model.TransportSelectList"></select>
                <span asp-validation-for="Invoice.TransportId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Invoice.Id"/>
            <input type="hidden" asp-for="Invoice.CreatedAt" />
            <input type="hidden" asp-for="Invoice.CreatedBy" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}