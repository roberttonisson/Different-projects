@using Domain
@model InvoiceCreateEditViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Invoice.IsPaid" /> @nameof(Invoice.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.UserId" class="control-label"></label>
                <select asp-for="Invoice.UserId" class="form-control" asp-items="Model.AppUserSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.TransportId" class="control-label"></label>
                <select asp-for="Invoice.TransportId" class ="form-control" asp-items="Model.TransportSelectList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.CreatedBy" class="control-label"></label>
                <input asp-for="Invoice.CreatedBy" class="form-control" />
                <span asp-validation-for="Invoice.CreatedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.CreatedAt" class="control-label"></label>
                <input asp-for="Invoice.CreatedAt" class="form-control" />
                <span asp-validation-for="Invoice.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.ChangedBy" class="control-label"></label>
                <input asp-for="Invoice.ChangedBy" class="form-control" />
                <span asp-validation-for="Invoice.ChangedBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.ChangedAt" class="control-label"></label>
                <input asp-for="Invoice.ChangedAt" class="form-control" />
                <span asp-validation-for="Invoice.ChangedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
