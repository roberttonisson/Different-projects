@using Domain
@model BLL.App.DTO.Invoice

@{
    ViewData["Title"] = "Create";
}

<h1>@Resources.Views.Shared.CreateShared.Create</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPaid" /> @nameof(Invoice.IsPaid)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TransportId" class="control-label"></label>
                <select asp-for="TransportId" class ="form-control" asp-items="Model.TransportSelectList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
