@model IEnumerable<Domain.AdditionalTopping>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">@Resources.Views.Shared.CreateShared.Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Topping)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PizzaInCart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChangedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topping.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaInCart.PizzaType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@Resources.Views.Shared.EditShared.Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">@Resources.Views.Shared.DetailsShared.Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">@Resources.Views.Shared.DeleteShared.Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
