                <label asp-for="DefaultTopping.PizzaTypeId" class="control-label"></label>
                <select asp-for="DefaultTopping.PizzaTypeId" class="form-control" asp-items="Model.PizzaTypeSelectList"></select>
                <span asp-validation-for="DefaultTopping.PizzaTypeId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="DefaultTopping.Id" />
            <input type="hidden" asp-for="DefaultTopping.CreatedAt" />
            <input type="hidden" asp-for="DefaultTopping.CreatedBy" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
