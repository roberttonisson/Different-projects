@model DrinkCreateEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Views.Shared.EditShared.Edit</h1>

<h4>Drink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Drink.Name" class="control-label"></label>
                <input asp-for="Drink.Name" class="form-control" />
                <span asp-validation-for="Drink.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink.Price" class="control-label"></label>
                <input asp-for="Drink.Price" class="form-control" />
                <span asp-validation-for="Drink.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink.Size" class="control-label"></label>
                <input asp-for="Drink.Size" class="form-control" />
                <span asp-validation-for="Drink.Size" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Drink.Id" />
            <input type="hidden" asp-for="Drink.CreatedAt" />
            <input type="hidden" asp-for="Drink.CreatedBy" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
